@foreach (var item in Model)
{
    <div class="row songInfo" onclick="location.href='@Url.Action("Details", new { id = item.Id })';">
        <div class="col-md-2">
            @if (Html.DisplayFor(modelItem => item.picture).ToString().Length > 0)
                {
                <img class="songImage" src="data:image/png;base64,@Html.DisplayFor(modelItem => item.picture)" />
            }
        </div>
        <div class="col-md-10">
            <div class="artistListPos">
                <a href="@Url.Action("Edit", new { id = item.Id })" class="artistListActionBtn glyphicon glyphicon-pencil"></a>
                <a href="@Url.Action("Details", new { id = item.Id })" class="artistListActionBtn glyphicon glyphicon-info-sign"></a>
                <a href="@Url.Action("Delete", new { id = item.Id })" class="artistListActionBtn glyphicon glyphicon-remove"></a>
            </div>
            <h3 class="songTitle">@Html.DisplayFor(modelItem => item.firstName) @Html.DisplayFor(modelItem => item.lastName)</h3>
            <span>
                @item.biography.Substring(0, Math.Min(item.biography.Length, 300))...
            </span>
        </div>
    </div>

