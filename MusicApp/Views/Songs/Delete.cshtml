@model MusicApp.Models.Song

@{
    ViewBag.Title = "Delete";
}

<h2>Delete @Html.DisplayFor(model => model.songName)</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.songName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.songName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.album.AlbumName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.album.AlbumName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.publishDate)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.publishDate)
        </dd>
        @if (Html.DisplayFor(model => model.picture).ToString().Length > 0)
            {
        
        <dt>
            @Html.DisplayNameFor(model => model.picture)
        </dt>

        <dd>
            <img src="data:image/png;base64,@Html.DisplayFor(model => model.picture)" />
        </dd>
        }
@if (Html.DisplayFor(model => model.video).ToString().Length > 0)
{
        <dt>
            @Html.DisplayNameFor(model => model.video)
        </dt>

        <dd>

                <label>Video Clip</label><br />
                <video controls="controls">
                    <source src="data:video/mp4;base64,@Html.DisplayFor(model => model.video)" type="video/mp4" />
                    Your browser does not support the video tag.
                </video>
        </dd>
}
        <dt>
            @Html.DisplayNameFor(model => model.numOfViews)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.numOfViews)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.genre)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.genre)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "Index")
        </div>
    }
</div>
